{
  "name": "chatbot",
  "private": true,
  "version": "1.0.0",
  "description": "An interactive chatting tool with local deployed LLM.",
  "keywords": [
    "llm",
    "chatbot"
  ],
  "homepage": "https://github.com/LYZhelloworld/ChatBot#readme",
  "bugs": {
    "url": "https://github.com/LYZhelloworld/ChatBot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LYZhelloworld/ChatBot.git"
  },
  "license": "MIT",
  "author": "LYZhelloworld",
  "type": "commonjs",
  "main": "index.js",
  "bin": "dist/index.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "latest-win-x64"
    ],
    "outputPath": "bin"
  },
  "scripts": {
    "prebuild": "npm run json-schema",
    "build": "tsc",
    "predev": "npm run json-schema",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier --write src/**/*.ts",
    "json-schema": "typescript-json-schema src/types/**/*.ts * --required --noExtraProps --out src/validators/schema.json",
    "release": "npm run build && pkg ."
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "pkg": "^5.8.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-json-schema": "^0.65.1"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "openai": "^4.92.0"
  }
}
